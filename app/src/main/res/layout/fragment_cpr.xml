<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    tools:context=".ui.CPR.CPRFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graph_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/graph_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#282828">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/realtimeinfo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:text="@string/realtimeinfo"
                    android:textColor="@color/pedocorecolor"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="0.12"/>
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/time"
                    android:textColor="@color/dividerColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="0.45"/>
                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/count"
                    android:textColor="@color/dividerColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/time_tv"
                    app:layout_constraintBottom_toBottomOf="@id/time_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHorizontal_bias="0.5" />
                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/total"
                    android:textColor="@color/dividerColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/time_tv"
                    app:layout_constraintBottom_toBottomOf="@id/time_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHorizontal_bias="0.9" />
                <TextView
                    android:id="@+id/time_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/colorSecondPrimaryDark"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintTop_toBottomOf="@id/time_tv"
                    app:layout_constraintStart_toStartOf="@id/time_tv"
                    app:layout_constraintEnd_toEndOf="@id/time_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintVertical_bias="0.1"
                    />
                <TextView
                    android:id="@+id/count_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorSecondPrimaryDark"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintTop_toBottomOf="@id/count_tv"
                    app:layout_constraintStart_toStartOf="@id/count_tv"
                    app:layout_constraintEnd_toEndOf="@id/count_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintVertical_bias="0.1"
                    />
                <TextView
                    android:id="@+id/total_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorSecondPrimaryDark"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintTop_toBottomOf="@id/total_tv"
                    app:layout_constraintStart_toStartOf="@id/total_tv"
                    app:layout_constraintEnd_toEndOf="@id/total_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintVertical_bias="0.1"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/speed_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#282828">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/anne_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anne"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="100:35"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintHorizontal_bias="0.1"/>

                <TextView
                    android:id="@+id/remote_depth_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="55sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:visibility="visible"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/anne_view"
                    app:layout_constraintTop_toTopOf="@id/anne_view"
                    app:layout_constraintBottom_toBottomOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintWidth_percent="0.09"
                    app:layout_constraintHeight_percent="0.13"
                    app:layout_constraintHorizontal_bias="0.13"
                    app:layout_constraintVertical_bias="0.2"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/depth_btn_cpr_tel"
                    app:layout_constraintStart_toStartOf="@id/depth_btn_cpr_tel"
                    app:layout_constraintEnd_toEndOf="@id/depth_btn_cpr_tel"
                    app:layout_constraintWidth_percent="0.12"
                    app:layout_constraintBottom_toTopOf="@id/standardCPR_btn_tel">
                    <View
                        android:id="@+id/depthCPR_view_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:background="#777777" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/remote_arrow_down"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/cpr_down_arrow"
                    android:visibility="invisible"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@id/standardCPR_btn_tel"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintTop_toTopOf="@id/anne_view"
                    app:layout_constraintBottom_toBottomOf="@id/anne_view"
                    app:layout_constraintHeight_percent="0.3"/>

                <TextView
                    android:id="@+id/remote_arrow_down_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/compress"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:maxLines="1"
                    android:autoSizeMaxTextSize="55sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/remote_arrow_down"
                    app:layout_constraintStart_toEndOf="@id/standardCPR_btn_tel"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintHeight_percent="0.1"/>


                <ImageView
                    android:id="@+id/remote_ani01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shine_effect"
                    app:layout_constraintStart_toStartOf="@id/standardCPR_btn_tel"
                    app:layout_constraintEnd_toEndOf="@id/standardCPR_btn_tel"
                    app:layout_constraintTop_toTopOf="@id/standardCPR_btn_tel"
                    app:layout_constraintBottom_toBottomOf="@id/standardCPR_btn_tel"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.05"/>

                <ImageView
                    android:id="@+id/remote_ani02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shine_effect"
                    app:layout_constraintStart_toStartOf="@id/standardCPR_btn_tel"
                    app:layout_constraintEnd_toEndOf="@id/standardCPR_btn_tel"
                    app:layout_constraintTop_toTopOf="@id/standardCPR_btn_tel"
                    app:layout_constraintBottom_toBottomOf="@id/standardCPR_btn_tel"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.05"/>

                <Button
                    android:id="@+id/standardCPR_btn_tel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/anne_point"
                    app:layout_constraintBottom_toBottomOf="@id/anne_view"
                    app:layout_constraintStart_toStartOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintHorizontal_bias="0.55"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintWidth_percent="0.13"/>

                <Button
                    android:id="@+id/depth_btn_cpr_tel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/position_press"
                    app:layout_constraintTop_toTopOf="@id/anne_view"
                    app:layout_constraintStart_toStartOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintHorizontal_bias="0.55"
                    app:layout_constraintWidth_percent="0.13"/>

                <Button
                    android:id="@+id/depth_btn_cpr_up"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/position_press"
                    app:layout_constraintTop_toTopOf="@id/anne_view"
                    app:layout_constraintStart_toStartOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintHorizontal_bias="0.55"
                    app:layout_constraintWidth_percent="0.13"/>

                <ImageView
                    android:id="@+id/angle_"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/angle_gray"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/anne_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/anne_view"
                    app:layout_constraintDimensionRatio="10:6"
                    app:layout_constraintWidth_percent="0.12"
                    app:layout_constraintHorizontal_bias="0.95"/>

                <ImageView
                    android:id="@+id/lung_tel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lung0"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.35"/>

                <ImageView
                    android:id="@+id/test_lung01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lung_normal_clip"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/anne_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.35"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>